{
  "name": "script-snap",
  "version": "0.1.0",
  "description": "ScriptSnap is a fast and easy-to-use script manager for Scriptable.",
  "keywords": [],
  "author": "TY <torworx@gmail.com>",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "prerelease": "yarn && yarn run build:full && cross-env CI=1 yarn run test",
    "release": "yarn prerelease && release-it",
    "build": "tsc && rollup -c",
    "build:watch": "tsc -w & rollup -c -w",
    "build:clean": "yarn clean && yarn build",
    "build:full": "yarn install && yarn run clean && yarn run build",
    "build:dev": "tsc && cross-env NODE_ENV=development rollup -c",
    "build:dev:clean": "yarn clean && yarn build:dev",
    "build:dev:watch": "concurrently 'tsc -w' 'cross-env NODE_ENV=development rollup -c -w'",
    "dev": "concurrently 'yarn build:dev:watch' 'http-server -p 3883 dev-scripts'",
    "lint": "yarn run prettier:check && yarn run eslint",
    "lint:fix": "yarn run eslint:fix && yarn run prettier:fix",
    "eslint": "nb-eslint --report-unused-disable-directives --cache .",
    "eslint:fix": "yarn run eslint --fix",
    "prettier:cli": "nb-prettier \"**/*.ts\" \"**/*.js\" \"**/*.md\"",
    "prettier:check": "yarn run prettier:cli --check",
    "prettier:fix": "yarn run prettier:cli --write",
    "clean": "del 'scripts/*' 'dev-scripts' 'build' 'dist' 'coverage' '.nyc_output' '*.tsbuildinfo'",
    "pretest": "yarn run clean && yarn run build",
    "test": "yarn run jest",
    "test:ci": "jest --collectCoverage --coverageDirectory=\"./coverage\" --reporters=default --reporters=jest-junit --watchAll=false",
    "jest": "jest",
    "posttest": "yarn run lint"
  },
  "devDependencies": {
    "@nutol/build": "^0.2.20",
    "@nutol/eslint-config": "^0.2.15",
    "@nutol/ts-config": "^0.2.2",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4",
    "@types/micromatch": "^4.0.7",
    "@types/node": "^20.12.12",
    "@types/scriptable-ios": "^1.7.7",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-plugin": "^6.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.5.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.2.5",
    "release-it": "^17.3.0",
    "rollup": "^4.24.0",
    "rollup-plugin-prettier": "^4.1.1",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.1.4",
    "typescript": "^5.4.5"
  },
  "release-it": {
    "hooks": {
      "after:bump": "yarn"
    }
  },
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "packageManager": "yarn@4.5.1"
}
